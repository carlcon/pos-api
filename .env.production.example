# =============================================================================
# POS API - Production Environment Variables
# =============================================================================
# Copy this file to .env.production and fill in the values
# NEVER commit the actual .env.production file to git!

# -----------------------------------------------------------------------------
# Django Core Settings
# -----------------------------------------------------------------------------
# Generate a new secret key: python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())"
SECRET_KEY=your-super-secret-key-change-this

# Set to False in production
DEBUG=False

# Comma-separated list of allowed hosts
ALLOWED_HOSTS=your-domain.com,api.your-domain.com,your-ec2-ip

# -----------------------------------------------------------------------------
# Database Configuration
# -----------------------------------------------------------------------------
# PostgreSQL connection (container name 'db' is used in docker-compose)
DB_NAME=pos_db
DB_USER=pos_user
DB_PASSWORD=your-strong-database-password-change-this
DB_HOST=db
DB_PORT=5432

# Full DATABASE_URL (alternative to individual settings)
# DATABASE_URL=postgres://pos_user:your-password@db:5432/pos_db

# -----------------------------------------------------------------------------
# Redis / Celery Configuration
# -----------------------------------------------------------------------------
REDIS_URL=redis://redis:6379/0
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/0

# -----------------------------------------------------------------------------
# CORS Settings
# -----------------------------------------------------------------------------
# Comma-separated list of allowed CORS origins
CORS_ALLOWED_ORIGINS=https://your-domain.com,https://www.your-domain.com

# Allow credentials (cookies) in CORS requests
CORS_ALLOW_CREDENTIALS=True

# -----------------------------------------------------------------------------
# CSRF Settings
# -----------------------------------------------------------------------------
# Trusted origins for CSRF
CSRF_TRUSTED_ORIGINS=https://your-domain.com,https://api.your-domain.com

# -----------------------------------------------------------------------------
# Media and Static Files
# -----------------------------------------------------------------------------
MEDIA_URL=/media/
STATIC_URL=/static/

# -----------------------------------------------------------------------------
# S3 Backup Configuration (for backup.sh script)
# -----------------------------------------------------------------------------
S3_BACKUP_BUCKET=your-backup-bucket-name
AWS_REGION=us-east-1

# Optional: Custom backup retention days (default: 7)
BACKUP_RETENTION_DAYS=7

# -----------------------------------------------------------------------------
# Admin Superuser (for init-data.sh script)
# -----------------------------------------------------------------------------
DJANGO_SUPERUSER_USERNAME=admin
DJANGO_SUPERUSER_EMAIL=admin@yourcompany.com
DJANGO_SUPERUSER_PASSWORD=your-secure-admin-password-change-this

# -----------------------------------------------------------------------------
# Email Configuration (optional - disabled by default)
# -----------------------------------------------------------------------------
# EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
# EMAIL_HOST=smtp.gmail.com
# EMAIL_PORT=587
# EMAIL_USE_TLS=True
# EMAIL_HOST_USER=your-email@gmail.com
# EMAIL_HOST_PASSWORD=your-app-password

# -----------------------------------------------------------------------------
# Sentry Error Tracking (optional)
# -----------------------------------------------------------------------------
# SENTRY_DSN=https://your-sentry-dsn

# -----------------------------------------------------------------------------
# SSL/Domain Configuration (for Let's Encrypt)
# -----------------------------------------------------------------------------
DOMAIN=your-domain.com
EMAIL=your-email@example.com
